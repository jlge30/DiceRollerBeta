<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#43EA88"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLanzar"
        android:layout_width="250dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="117dp"
        android:backgroundTint="@color/blue"
        android:contextClickable="false"
        android:elegantTextHeight="false"
        android:fontFamily="@font/alfa_slab_one"
        android:freezesText="false"
        android:gravity="center"
        android:onClick="lanzar"
        android:text="@string/roll"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_dado1" />

    <ImageButton
        android:id="@+id/musicaMenuPrincipal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Mostrar Popup"
        android:scaleType="fitCenter"
        android:background="@drawable/round_button"
        android:src="@drawable/megaphone"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_dado1"
        android:layout_width="120dp"
        android:layout_height="157dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLanzar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_mensaje"
        app:srcCompat="@drawable/dice_1" />

    <ImageView
        android:id="@+id/image_dado2"
        android:layout_width="120dp"
        android:layout_height="157dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_final_juego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toEndOf="@+id/image_dado1"
        app:layout_constraintTop_toBottomOf="@+id/txt_mensaje"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dice_1" />

    <TextView
        android:id="@+id/txt_mensaje"
        android:layout_width="398dp"
        android:layout_height="106dp"
        android:layout_marginTop="83dp"
        android:fontFamily="@font/alfa_slab_one"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0629ED"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/image_dado1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_puntuacion"
        app:layout_constraintVertical_bias="0.0"
        tools:text="mensaje" />

    <TextView
        android:id="@+id/txtTiradas"
        android:layout_width="376dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/tiradaspendientes"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicaMenuPrincipal" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="53dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_mensaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTiradas"
        app:layout_constraintVertical_bias="0.06"
        app:srcCompat="@drawable/euro" />


    <TextView
        android:id="@+id/txt_puntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="X"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/txtTiradas" />

    <TextView
        android:id="@+id/txt_final_juego"
        android:layout_width="338dp"
        android:layout_height="61dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/finaljuego"
        android:textAlignment="center"
        android:textColor="#F10A0A"
        android:textSize="34sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTiradas"
        app:layout_constraintVertical_bias="0.34" />

</androidx.constraintlayout.widget.ConstraintLayout>